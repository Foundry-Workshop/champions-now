<nav class="sheet-tabs tabs {{#if limited}}hidden{{/if}}" aria-role="{{localize 'SHEETS.FormNavLabel'}}">
    {{#each tabs as |tab|}}
        <a class="{{tab.cssClass}}" data-action="tab" data-group="{{tab.group}}" data-tab="{{tab.id}}">
            <i class="{{tab.icon}}"></i>
            <label>{{localize tab.label}}</label>
        </a>
    {{/each}}
</nav>
